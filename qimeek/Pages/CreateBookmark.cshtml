@page
@model qimeek.Pages.CreateBookmarkModel
@{
    ViewData["Title"] = "Create new bookmark";
}

<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div class="mb-3">
                <label for="bkmUrl" class="form-label">Url</label>
                <input asp-for="NewBookmark.Url" type="text" class="form-control" id="bkmUrl">
                <label for="bkmTitle" class="form-label">Title</label>
                <input asp-for="NewBookmark.Title" type="text" class="form-control" id="bkmTitle">
                <input asp-for="NewBookmark.DirectoryId" type="hidden" class="form-control" value="@Model.CurrentDirectory?.Id">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>